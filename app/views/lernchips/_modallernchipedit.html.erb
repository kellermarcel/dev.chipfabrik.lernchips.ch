<div id="modal" class="popup uk-modal" style="display:block;">
	<div class="uk-modal-dialog uk-modal-body">
			   <span class="modal-close abbrechen" _="on click take .uk-open from #modal wait 200ms then remove #modal">+</span>
		<h2 class="uk-modal-title">Lernchip editieren </h2>


<%=form_with model: lernchip do |form| %>
        <div>
			Titel: <input type="text" class="uk-input" name="title" value='<%= lernchip.title %>'>
			<input type="hidden" name="lernchip_id" value="<%= lernchip.id%>">
		</div>
		<% if params[:contenttyp]=="51" %><br/>
		    PDF Upload <br/><br/><input type="file" name="datei"><br/>

		<% end %>

		<br/>
			<button 
				id="cancelButton"
				type="button" 
				class="btn-small btn-red uk-button uk-button-default" 
				_="on click take .uk-open from #modal wait 200ms then remove #modal">Abbrechen</button>
	
			<button type="submit" class="btn-small btn-green uk-button" _="on click take .uk-open from #modal wait 200ms then remove #modal">Weiter</button>
	</div>

<% end %>


</div> 