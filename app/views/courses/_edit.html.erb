<div id="modal" class="popup uk-modal" style="display:block;">
	<div class="uk-modal-dialog uk-modal-body">
	   <span class="modal-close abbrechen" _="on click take .uk-open from #modal wait 200ms then remove #modal">+</span>
		<h2 class="uk-modal-title">Chipsettitel bearbeiten</h2>

        	<div>
				<input type="text" class="uk-input" name="title" placeholder="<%=chipset.title%>">
			</div>
			<br/>
			<button 
				id="cancelButton"
				type="button" 
				class="btn-small btn-red uk-button uk-button-default" 
				_="on click take .uk-open from #modal wait 200ms then remove #modal">Abbrechen</button>
			<button hx-patch="courses/<%= chipset.id%>" hx-include="[name=title]" hx-target="#aktuellerOrdner" class="btn-small btn-green uk-button" _="on click take .uk-open from #modal wait 200ms then remove #modal">Mutieren</button>

		</div>
	</div>
